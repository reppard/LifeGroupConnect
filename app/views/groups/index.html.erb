<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Meeting day</th>
      <th>Meeting time</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group %></td>
        <td><%= group.meeting_day %></td>
        <td><%= group.meeting_time.strftime("%I:%M %p") %></td>
        <td><%= group.location %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>
<%= link_to 'View All Members', members_path %>
