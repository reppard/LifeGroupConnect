<p id="notice"><%= notice %></p>

<p>
<h2>"<%= @group.name %>" Meets on <%= @group.meeting_day %> @ <%= @group.meeting_time.strftime("%I:%M %p") %></h2>
<h2>Venue: <%= @group.location %></h2>
<%= link_to 'Edit Group', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
</p>
<p>
<hr>
<h2><strong>Member List</strong></h2>
<%= link_to 'New Member', new_member_path(group_id: @group.id)%>
</p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @group.members_sorted_by_name.each do |member| %>
    <tr>
      <td><%= member.name %></td>
      <td><%= member.memberships.first.role %></td>
      <td><%= member.phone %></td>
      <td><%= member.email %></td>
      <td><%= member.address %></td>
      <td><%= link_to 'Edit', edit_member_path(member) %></td>
      <td><%= link_to 'Delete', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<p>
<hr>
<h2><strong>Prayer Requests</strong></h2>
<%= link_to 'New Prayer Request', new_prayer_request_path(group_id: @group.id)%>
</p>
<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Requested by</th>
      <th>Focus</th>
      <th>Description</th>
      <th>Until</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @group.prayer_requests.each do |prayer_request| %>
    <tr>
      <td><%= prayer_request.status %></td>
      <td><%= prayer_request.requesters_name %></td>
      <td><%= prayer_request.focus %></td>
      <td><%= prayer_request.description %></td>
      <td><%= prayer_request.until %></td>
      <td><%= link_to 'Show', prayer_request %></td>
      <td><%= link_to 'Edit', edit_prayer_request_path(prayer_request) %></td>
      <td><%= link_to 'Destroy', prayer_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<hr>
